
<MainLayout>
    GridLayout:
        cols: 3
        rows: 1
        #navigation panel
        size: (1200, 100)
        StackLayout:
            id: navigation_panel
            size_hint: (.2, .2)
            padding: 5
            spacing: 5
            canvas.before:
                Color:
                    rgba: 180/255, 180/255, 180/255, 0.15
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: 'Wyszukaj'
                size_hint: (1, .04)
                center_x: 1
                font_size: 14
            Button:
                spacing: 10
                text: 'Biblioteka'
                size_hint: (1, .04)
                center_x: 1
                font_size: 14
                on_press: root.manager.current = 'LibraryScreen'
            Label:
                size_hint: (1, .72)
            AnchorLayout:
                id: now_playing
                anchor_x: 'center'
                anchor_y: 'bottom'
                size_hint: (1, .2)
        #main panel
        StackLayout:
            #seach panel
            GridLayout:
                rows: 1
                cols: 2
                size_hint: (1, .1)
                #search TextBox
                TextInput:
                    id: search_box
                    background_color: 180/255, 180/255, 180/255, 0.3
                    size: (.7, .1)
                    size_hint: (.7, .1)
                    font_size: 24
                    top: 1
                    pos_hint_y: root.y
                    multiline: False
                    hint_text: 'Wyszukaj'
                    cursor_color: 1, 1, 1, 1
                    foreground_color: 1, 1, 1, 1
                    on_text_validate: root.searchSong()
                Button:
                    top: 1
                    pos_hint_y: root.y
                    text: 'Szukaj'
                    size_hint: (.3, .1)
                    size: (.3, .1)
                    center_x: 1
                    font_size: 14
                    on_press: root.searchSong()
            #results panel
            StackLayout:
                id: results
                canvas.before:
                    Color:
                        rgba: 12/255, 12/255, 12/255, 0.9
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint: (1, .7)
            #player panel
            BoxLayout:
                size_hint: (1, .2)
                orientation: 'horizontal'
                canvas.before:
                    Color:
                        rgba: 64/255, 62/255, 58/255, 0.9
                    Rectangle:
                        pos: self.pos
                        size: self.size
                StackLayout:
                    size_hint: (.8, 1)
                    BoxLayout:
                        spacing: 5
                        padding: 10
                        size_hint: (1, .5)
                        AnchorLayout:
                            anchor_x: 'center'
                            anchor_y: 'center'
                            Button:
                                on_press: root.getPrevious()
                            Image:
                                source: 'Images/previousButton.png'
                                size_hint: 0.4, 0.4
                        AnchorLayout:
                            anchor_x: 'center'
                            anchor_y: 'center'
                            Button:
                                on_press: root.playSong()
                            Image:
                                source: 'Images/playButton.png'
                                size_hint: 0.4, 0.4
                        AnchorLayout:
                            anchor_x: 'center'
                            anchor_y: 'center'
                            Button:
                                on_press: root.plauseSong()
                            Image:
                                source: 'Images/pauseButton.png'
                                size_hint: 0.4, 0.4
                        AnchorLayout:
                            anchor_x: 'center'
                            anchor_y: 'center'
                            Button:
                                on_press: root.getNext()
                            Image:
                                source: 'Images/nextButton.png'
                                size_hint: 0.4, 0.4
                    ProgressBar:
                        id: playback_control
                        foreground_color: 1, 0, 0, 1
                        min: 0
                        value: 1
                        max: 10000
                        orientation: 'horizontal'
                        size_hint: (1, .5)
                Slider:
                    id: volume_control
                    min: 0
                    max: 100
                    value: 50
                    value_track: True
                    value_track_color: 94/255, 223/255, 242/255, 1
                    cursor_size: 10, 10

                    step: 1
                    orientation: 'vertical'
                    size_hint: (.1, 1)
        #actual playlist panel
        StackLayout:
            id: actual_playlist
            size_hint: (.3, 1)
            canvas.before:
                Color:
                    rgba: 180/255, 180/255, 180/255, 0.15
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                id: playlist_name
                size_hint: (1, .1)
                background_color: 1, 0, 0, 1
                foreground_color: 1, 0, 0, 1
                text: 'Playlist'
                font_size: 20
            StackLayout:
                id: playlist_items
                size_hint: (1, .9)


